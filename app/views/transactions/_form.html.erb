    <%= form.label :'Тип операції*', style: "display: block" %>
    <%= form.text_field :typeoperat %>
  </div>
  <div>
    <%= form.label :'Сума*', style: "display: block" %>
    <%= form.number_field :sum %>
  </div>
  <div>
    <%= form.label :'Дата*', style: "display: block" %>
    <%= form.date_field :date %>
  </div>
  <div>
    <%= form.label :'Опис', style: "display: block" %>
    <%= form.rich_text_area :desc %>
  </div>
  <div style="margin-top:20px">
    <%= form.submit%>
  </div>
<% end %>
